#include <stdio.h>

int main() {
    int marks[6], i, total = 0;
    float percentage;
    printf("Enter marks for 6 subjects:\n");
    for(i = 0; i < 6; i++) {
        printf("Subject %d: ", i + 1);
        scanf("%d", &marks[i]);
        total += marks[i];
    }

    percentage = (float)total / 6;
    printf("\nTotal Marks = %d\n", total);
    printf("Percentage = %.2f%%\n", percentage);
}
