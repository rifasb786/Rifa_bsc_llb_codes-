#include <stdio.h>

int main() 
{
    int arr[10], i;
    printf("Enter 10 integers:\n");
    for(i = 0; i < 10; i++) 
    {
        printf("Element %d: ", i + 1);
        scanf("%d", &arr[i]);
    }
    printf("\nPositions of even elements in the array:\n");
    for(i = 0; i < 10; i++) 
    {
        if(arr[i] % 2 == 0) 
        {
            printf("Position %d (Index %d) â†’ Value: %d\n", i + 1, i, arr[i]);
        }
    }
}
