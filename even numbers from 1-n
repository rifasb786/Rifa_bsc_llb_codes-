#include <stdio.h>

int main() 
{
    int n;
    printf("Enter a  integer: ");
    scanf("%d", &n);
    if (n < 1) 
    {
        printf("enter a number greater than 0 .\n");
        return 1;
    }

    printf("Even numbers from 1 to %d are:\n", n);
    for (int i = 2; i <= n; i += 2) 
    {
        printf("%d ", i);
    }

    printf("\n");
}
