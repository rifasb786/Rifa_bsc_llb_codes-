#include <stdio.h>

int main()
{
    int day;
    printf("Enter the number (1-7):");
    scanf("%d",&day);
    switch (day)
    {
        case 1:printf("Monday\n");
        break;
        case 2:printf("Tuesday\n");
        break;
        case 3:printf("wednesday\n");
        break;
        case 4:printf("Thusday\n");
        break;
        case 5:printf("Friday\n");
        break;
        case 6:("Saturday\n");
        break;
        case 7:("Sunday\n");
       
        default: printf("Invalid input ! Enter between 1-7.\n");
         return 0;
    }
    }


    
    
        
        
    

